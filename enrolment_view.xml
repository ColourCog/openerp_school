<openerp>
  <data noupdate="0">

    <record id="view_school_roster_enrolment_tree" model="ir.ui.view">
      <field name="name">school.roster.enrolment.tree</field>
      <field name="model">school.roster.enrolment</field>
      <field name="arch" type="xml">
        <tree string="Enrolments">
          <field name="student_id"/>
          <field name="roster_id"/>
          <field name="state"/>
        </tree>
      </field>
    </record>

    <record id="view_school_roster_enrolment_form" model="ir.ui.view">
      <field name="name">school.roster.enrolment.form</field>
      <field name="model">school.roster.enrolment</field>
      <field name="arch" type="xml">
        <form string="Enrolment" version="7.0">
          <header>
            <button name="enrolment_draft" states="cancelled" string="Set to Draft" type="object" />
            <button name="validate" states="draft" string="Validate"/>
            <button name="cancel" states="draft,pending" string="Cancel"/>
            <field name="state" widget="statusbar" statusbar_visible="draft,pending,done" statusbar_colors='{"cancelled":"red"}'/>
          </header>
          <sheet>
            <h1> <label string="Enrolment"/> <field name="name" class="oe_inline" readonly="1"/> </h1>
            <group>
              <group>
                <field name="date"/>
                <field name="student_id"/>
                <field name="roster_id"/>
              </group>
              <group>
                <field name="registration_fee_id" />
                <field name="user_id"/>
              </group>
            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="message_ids" widget="mail_thread" placeholder="Share a message..."/>
          </div>
        </form>
      </field>
    </record>

    <record id="view_school_roster_enrolment_filter" model="ir.ui.view">
      <field name="name">school.roster.enrolment.filter</field>
      <field name="model">school.roster.enrolment</field>
      <field name="arch" type="xml">
        <search string="Search Enrolments">
          <field name="name"/>
          <field name="student_id"/>
          <field name="roster_id"/>
          <filter icon="terp-check" name="not_paid" string="Pending" domain="[('state','!=','done')]"/>
          <filter icon="terp-check" name="is_paid" string="Paid" domain="[('state','=','done')]"/>
          <separator/>
          <group expand="0" string="Group By..." >
            <filter string="Status" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'state'}"/>
            <filter string="Grade Roster" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'roster_id'}"/>
          </group>
        </search>
      </field>
    </record>

    <record id="action_school_roster_enrolment_form" model="ir.actions.act_window">
      <field name="name">Enrolments</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">school.roster.enrolment</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="search_view_id" ref="view_school_roster_enrolment_filter"/>
      <field name="context">{"search_default_not_paid":1}</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to create a new Enrolment.
        </p><p>
          Use this form to create a new Enrolment for a student.
        </p>
      </field>
    </record>

    <menuitem action="action_school_roster_enrolment_form" id="menu_school_roster_enrolment" parent="menu_school_academic" sequence="10" />

  </data>
</openerp>
