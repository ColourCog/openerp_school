<openerp>
  <data noupdate="0">

    <!-- Academic Year -->
    <record id="view_school_academic_year_tree" model="ir.ui.view">
      <field name="name">school.academic.year.tree</field>
      <field name="model">school.academic.year</field>
      <field name="arch" type="xml">
        <tree string="Academic Year" colors="grey:state=='archived'">
          <field name="name"/>
          <field name="state"/>
        </tree>
      </field>
    </record>

    <record id="view_school_academic_year_form" model="ir.ui.view">
      <field name="name">school.academic.year.form</field>
      <field name="model">school.academic.year</field>
      <field name="arch" type="xml">
        <form string="Academic Year" version="7.0">
          <header>
            <button name="close_year" type="object" states="open" string="Archive" groups="school.group_school_manager"/>
            <field name="state" widget="statusbar" statusbar_visible="open,archived" statusbar_colors='{"archived":"grey"}'/>
          </header>
          <sheet>
            <group>
              <field name="name"/>
            </group>
            <notebook>
              <page string="Classes">
                <field name="class_ids">
                  <tree string="Classes for this Year">
                    <field name="year_id" invisible="1"/>
                    <field name="name" />
                    <field name="teacher_id"/>
                  </tree>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_school_academic_year_filter" model="ir.ui.view">
      <field name="name">school.academic.year.filter</field>
      <field name="model">school.academic.year</field>
      <field name="arch" type="xml">
        <search string="Search Academic Years">
          <field name="name"/>
          <filter icon="terp-check" name="open" string="Current" domain="[('state','!=','closed')]"/>
          <filter icon="terp-check" name="closed" string="Archived" domain="[('state','=','closed')]"/>
        </search>
      </field>
    </record>

    <record id="action_school_academic_year_form" model="ir.actions.act_window">
      <field name="name">Academic Year</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">school.academic.year</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{"search_default_open":1}</field>
      <field name="search_view_id" ref="view_school_academic_year_filter"/>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to create a new Academic Year.
        </p>
      </field>
    </record>

    <menuitem action="action_school_academic_year_form" id="menu_school_academic_year" parent="menu_school_configuration" sequence="1" />

    <!-- Academic Level -->
    <record id="view_school_academic_level_tree" model="ir.ui.view">
      <field name="name">school.academic.level.tree</field>
      <field name="model">school.academic.level</field>
      <field name="arch" type="xml">
        <tree string="Academic Level">
          <field name="name"/>
          <field name="tuition_fee_id"/>
        </tree>
      </field>
    </record>

    <record id="view_school_academic_level_form" model="ir.ui.view">
      <field name="name">school.academic.level.form</field>
      <field name="model">school.academic.level</field>
      <field name="arch" type="xml">
        <form string="Academic Level" version="7.0">
          <sheet>
            <group>
              <group>
                <field name="name"/>
              </group>
              <group>
                <field name="tuition_fee_id"/>
              </group>
            </group>
            <notebook>
              <page string="Description">
                <field name="description"/>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_school_academic_level_form" model="ir.actions.act_window">
      <field name="name">Academic Level</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">school.academic.level</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{}</field>
      <field name="search_view_id" ref="view_school_academic_year_filter"/>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to create a new Academic Level.
        </p>
      </field>
    </record>

    <menuitem action="action_school_academic_level_form"
      id="menu_school_academic_level"
      groups="school.group_school_headteacher"
      parent="menu_school_configuration"
      sequence="2" />


    <!-- Teacher -->
    <record id="view_school_teacher_tree" model="ir.ui.view">
      <field name="name">school.teacher.tree</field>
      <field name="model">school.teacher</field>
      <field name="arch" type="xml">
        <tree string="Teachers">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="view_school_teacher_form" model="ir.ui.view">
      <field name="name">school.teacher.form</field>
      <field name="model">school.teacher</field>
      <field name="arch" type="xml">
        <form string="Teachers" version="7.0">
          <sheet>
            <group name="identity">
              <field name="employee_id"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_school_teacher_filter" model="ir.ui.view">
      <field name="name">school.teacher.filter</field>
      <field name="model">school.teacher</field>
      <field name="arch" type="xml">
        <search string="Search Teachers">
          <field name="name"/>
        </search>
      </field>
    </record>

    <record id="action_school_teacher_form" model="ir.actions.act_window">
      <field name="name">Teachers</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">school.teacher</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{}</field>
      <field name="search_view_id" ref="view_school_teacher_filter"/>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to create a new Teacher.
        </p>
      </field>
    </record>

    <menuitem action="action_school_teacher_form"
      id="menu_school_teacher"
      groups="school.group_school_headteacher"
      parent="menu_school_configuration"
      sequence="3" />

    <!-- Class -->
    <record id="view_school_class_tree" model="ir.ui.view">
      <field name="name">school.class.tree</field>
      <field name="model">school.class</field>
      <field name="arch" type="xml">
        <tree string="Classes" colors="red:state=='closed';grey:state=='archived'">
          <field name="name"/>
          <field name="state"/>
        </tree>
      </field>
    </record>

    <record id="view_school_class_form" model="ir.ui.view">
      <field name="name">school.class.form</field>
      <field name="model">school.class</field>
      <field name="arch" type="xml">
        <form string="Class" version="7.0">
          <header>
            <button name="close_class" type="object" states="open" string="Close" groups="school.group_school_manager"/>
            <button name="archive_class" type="object" states="closed" string="Archive" groups="school.group_school_manager"/>
            <field name="state" widget="statusbar" statusbar_visible="open,closed,archived" statusbar_colors='{"archived":"grey"}'/>
          </header>
          <sheet>
            <h1> <field name="name" class="oe_inline" readonly="1"/> </h1>
            <group>
              <group>
                <field name="year_id"/>
                <field name="level_id"/>
              </group>
              <group>
                <field name="teacher_id"/>
              </group>
            </group>
            <notebook>
              <page string="Class Roll">
                <field name="registration_ids">
                  <tree string="Student Roll">
                    <field name="class_id" invisible="1"/>
                    <field name="name" />
                    <field name="student_id"/>
                  </tree>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_school_class_filter" model="ir.ui.view">
      <field name="name">school.class.filter</field>
      <field name="model">school.class</field>
      <field name="arch" type="xml">
        <search string="Search classes">
          <field name="level_id"/>
          <field name="teacher_id"/>
          <filter icon="terp-check" name="open" string="Open" domain="[('state','=','open')]"/>
          <filter icon="terp-check" name="closed" string="Closed" domain="[('state','=','closed')]"/>
          <filter icon="terp-check" name="archived" string="Archived" domain="[('state','=','archived')]"/>
        </search>
      </field>
    </record>

    <record id="action_school_class_form" model="ir.actions.act_window">
      <field name="name">Classes</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">school.class</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{"search_default_open":1}</field>
      <field name="search_view_id" ref="view_school_class_filter"/>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to create a new class.
        </p>
      </field>
    </record>

    <menuitem action="action_school_class_form" id="menu_school_class"
      parent="menu_school_academic"
      groups="school.group_school_headteacher"
      sequence="1" />

    <!-- Education / Previous school -->
    <record id="view_school_student_education_tree" model="ir.ui.view">
      <field name="name">school.student.education.tree</field>
      <field name="model">school.student.education</field>
      <field name="arch" type="xml">
        <tree string="Student Education">
          <field name="student_id"/>
          <field name="school_id"/>
          <field name="date_from"/>
          <field name="date_to"/>
        </tree>
      </field>
    </record>

    <record id="view_school_student_education_filter" model="ir.ui.view">
      <field name="name">school.student.education.filter</field>
      <field name="model">school.student.education</field>
      <field name="arch" type="xml">
        <search string="Search Student education">
          <field name="student_id"/>
          <field name="school_id"/>
          <group expand="0" string="Group By..." >
            <filter string="Student" domain="[]" context="{'group_by':'student_id'}"/>
            <filter string="School" domain="[]" context="{'group_by':'school_id'}"/>
          </group>
        </search>
      </field>
    </record>

    <record id="view_school_student_education_form" model="ir.ui.view">
      <field name="name">school.student.education.form</field>
      <field name="model">school.student.education</field>
      <field name="arch" type="xml">
        <form string="Previous Education" version="7.0">
          <sheet>
            <group>
              <group>
                <field name="student_id"/>
                <field name="school_id"/>
              </group>
              <group>
                <field name="date_from"/>
                <field name="date_to"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_school_student_education_form" model="ir.actions.act_window">
      <field name="name">Previous Education</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">school.student.education</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{}</field>
      <field name="search_view_id" ref="view_school_student_education_filter"/>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to create a new Student Education.
        </p>
      </field>
    </record>

    <menuitem action="action_school_student_education_form" id="menu_school_education" parent="menu_school_student_root" sequence="3" />


    <!-- Checklist -->
    <record id="view_school_checklist_item_tree" model="ir.ui.view">
      <field name="name">school.checklist.item.tree</field>
      <field name="model">school.checklist.item</field>
      <field name="arch" type="xml">
        <tree string="Checklists">
          <field name="checklist_id"/>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="view_school_checklist_item_filter" model="ir.ui.view">
      <field name="name">school.checklist.item.filter</field>
      <field name="model">school.checklist.item</field>
      <field name="arch" type="xml">
        <search string="Search Checklists">
          <field name="name"/>
          <field name="checklist_id"/>
          <group expand="0" string="Group By..." >
            <filter string="Category" domain="[]" context="{'group_by':'checklist_id'}"/>
          </group>
        </search>
      </field>
    </record>

    <record id="view_school_checklist_item_form" model="ir.ui.view">
      <field name="name">school.checklist.item.form</field>
      <field name="model">school.checklist.item</field>
      <field name="arch" type="xml">
        <form string="School" version="7.0">
          <sheet>
            <group>
              <group>
                <field name="checklist_id"/>
              </group>
              <group>
                <field name="name"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_school_checklist_item_form" model="ir.actions.act_window">
      <field name="name">Checklists</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">school.checklist.item</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{}</field>
      <field name="search_view_id" ref="view_school_checklist_item_filter"/>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to create a new Checklist item.
        </p>
      </field>
    </record>

    <menuitem action="action_school_checklist_item_form" id="menu_school_checklist_item" parent="menu_school_configuration" sequence="9" />

    <!-- School -->
    <record id="view_school_school_tree" model="ir.ui.view">
      <field name="name">school.school.tree</field>
      <field name="model">school.school</field>
      <field name="arch" type="xml">
        <tree string="Schools">
          <field name="name"/>
          <field name="country_id"/>
        </tree>
      </field>
    </record>

    <record id="view_school_school_filter" model="ir.ui.view">
      <field name="name">school.school.filter</field>
      <field name="model">school.school</field>
      <field name="arch" type="xml">
        <search string="Search School">
          <field name="name"/>
          <field name="country_id"/>
          <group expand="0" string="Group By..." >
            <filter string="Country" domain="[]" context="{'group_by':'country_id'}"/>
          </group>
        </search>
      </field>
    </record>

    <record id="view_school_school_form" model="ir.ui.view">
      <field name="name">school.school.form</field>
      <field name="model">school.school</field>
      <field name="arch" type="xml">
        <form string="School" version="7.0">
          <sheet>
            <group>
              <field name="name"/>
              <label for="street" string="Address"/>
              <div>
                  <field name="street" placeholder="Street..."/>
                  <field name="street2"  />
                  <div class="address_format">
                      <field name="city" placeholder="City" style="width: 40%%" />
                      <field name="state_id" class="oe_no_button" placeholder="State" style="width: 37%%" options='{"no_open": True}' />
                      <field name="zip" placeholder="ZIP" style="width: 20%%" />
                  </div>
                  <field name="country_id" placeholder="Country" class="oe_no_button" options='{"no_open": True}' />
              </div>
              <field name="website" widget="url" placeholder="e.g. www.openerp.com"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_school_school_form" model="ir.actions.act_window">
      <field name="name">Other Schools</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">school.school</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{}</field>
      <field name="search_view_id" ref="view_school_school_filter"/>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to create a new School.
        </p>
      </field>
    </record>

    <menuitem action="action_school_school_form" id="menu_school_school" parent="menu_school_configuration" sequence="10" />

  </data>
</openerp>
