<openerp>
  <data noupdate="0">

    <!-- Academic Year -->
    <record id="view_school_academic_year_tree" model="ir.ui.view">
      <field name="name">school.academic.year.tree</field>
      <field name="model">school.academic.year</field>
      <field name="arch" type="xml">
        <tree string="Academic Year">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="view_school_academic_year_form" model="ir.ui.view">
      <field name="name">school.academic.year.form</field>
      <field name="model">school.academic.year</field>
      <field name="arch" type="xml">
        <form string="Academic Year" version="7.0">
          <header>
            <button name="close_year" type="object" states="open" string="Archive" groups="school.group_school_manager"/>
            <field name="state" widget="statusbar" statusbar_visible="open,closed" statusbar_colors='{"closed":"grey"}'/>
          </header>
          <sheet>
            <group>
              <field name="name"/>
            </group>
            <notebook>
              <page string="Classes">
                <field name="class_ids">
                  <tree string="Classes for this Year">
                    <field name="year_id" invisible="1"/>
                    <field name="name" />
                    <field name="teacher_id"/>
                  </tree>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_school_academic_year_filter" model="ir.ui.view">
      <field name="name">school.academic.year.filter</field>
      <field name="model">school.academic.year</field>
      <field name="arch" type="xml">
        <search string="Search Academic Years">
          <field name="name"/>
          <filter icon="terp-check" name="open" string="Current" domain="[('state','!=','closed')]"/>
          <filter icon="terp-check" name="closed" string="Archived" domain="[('state','=','closed')]"/>
        </search>
      </field>
    </record>

    <record id="action_school_academic_year_form" model="ir.actions.act_window">
      <field name="name">Academic Year</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">school.academic.year</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{"search_default_open":1}</field>
      <field name="search_view_id" ref="view_school_academic_year_filter"/>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to create a new Academic Year.
        </p>
      </field>
    </record>

    <menuitem action="action_school_academic_year_form" id="menu_school_academic_year" parent="menu_school_configuration" sequence="1" />

    <!-- Academic Level -->
    <record id="view_school_academic_level_tree" model="ir.ui.view">
      <field name="name">school.academic.level.tree</field>
      <field name="model">school.academic.level</field>
      <field name="arch" type="xml">
        <tree string="Academic Level">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="view_school_academic_level_form" model="ir.ui.view">
      <field name="name">school.academic.level.form</field>
      <field name="model">school.academic.level</field>
      <field name="arch" type="xml">
        <form string="Academic Level" version="7.0">
          <sheet>
            <group>
              <field name="name"/>
              <field name="registration_fee_id"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_school_academic_level_form" model="ir.actions.act_window">
      <field name="name">Academic Level</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">school.academic.level</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{}</field>
      <field name="search_view_id" ref="view_school_academic_year_filter"/>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to create a new Academic Level.
        </p>
      </field>
    </record>

    <menuitem action="action_school_academic_level_form" id="menu_school_academic_level" parent="menu_school_configuration" sequence="2" />


    <!-- Teacher -->
    <record id="view_school_teacher_tree" model="ir.ui.view">
      <field name="name">school.teacher.tree</field>
      <field name="model">school.teacher</field>
      <field name="arch" type="xml">
        <tree string="Teachers">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="view_school_teacher_form" model="ir.ui.view">
      <field name="name">school.teacher.form</field>
      <field name="model">school.teacher</field>
      <field name="arch" type="xml">
        <form string="Teachers" version="7.0">
          <sheet>
            <group>
              <field name="employee_id"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_school_teacher_filter" model="ir.ui.view">
      <field name="name">school.teacher.filter</field>
      <field name="model">school.teacher</field>
      <field name="arch" type="xml">
        <search string="Search Teachers">
          <field name="name"/>
        </search>
      </field>
    </record>

    <record id="action_school_teacher_form" model="ir.actions.act_window">
      <field name="name">Teachers</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">school.teacher</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{}</field>
      <field name="search_view_id" ref="view_school_teacher_filter"/>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to create a new Teacher.
        </p>
      </field>
    </record>

    <menuitem action="action_school_teacher_form" id="menu_school_teacher" parent="menu_school_configuration" sequence="3" />

    <!-- Class -->
    <record id="view_school_class_tree" model="ir.ui.view">
      <field name="name">school.class.tree</field>
      <field name="model">school.class</field>
      <field name="arch" type="xml">
        <tree string="Classes">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="view_school_class_form" model="ir.ui.view">
      <field name="name">school.class.form</field>
      <field name="model">school.class</field>
      <field name="arch" type="xml">
        <form string="Class" version="7.0">
          <header>
            <field name="state" widget="statusbar" statusbar_visible="open,closed" statusbar_colors='{"closed":"grey"}'/>
          </header>
          <sheet>
            <h1> <field name="name" class="oe_inline" readonly="1"/> </h1>
            <group>
              <group>
                <field name="year_id"/>
                <field name="level_id"/>
              </group>
              <group>
                <field name="teacher_id"/>
              </group>
            </group>
            <notebook>
              <page string="Roll">
                <field name="registration_ids">
                  <tree string="Student Roll">
                    <field name="class_id" invisible="1"/>
                    <field name="name" />
                    <field name="student_id"/>
                  </tree>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_school_class_filter" model="ir.ui.view">
      <field name="name">school.class.filter</field>
      <field name="model">school.class</field>
      <field name="arch" type="xml">
        <search string="Search classes">
          <field name="level_id"/>
          <field name="teacher_id"/>
          <filter icon="terp-check" name="open" string="Current" domain="[('state','!=','closed')]"/>
          <filter icon="terp-check" name="closed" string="Archived" domain="[('state','=','closed')]"/>
        </search>
      </field>
    </record>

    <record id="action_school_class_form" model="ir.actions.act_window">
      <field name="name">Classes</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">school.class</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{"search_default_open":1}</field>
      <field name="search_view_id" ref="view_school_class_filter"/>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to create a new class.
        </p>
      </field>
    </record>

    <menuitem action="action_school_class_form" id="menu_school_class" parent="menu_school_academic" sequence="1" />

    <!-- Student Registration -->
    <record id="view_school_student_registration_tree" model="ir.ui.view">
      <field name="name">school.student.registration.tree</field>
      <field name="model">school.student.registration</field>
      <field name="arch" type="xml">
        <tree string="Classes">
          <field name="year_id"/>
          <field name="name"/>
          <field name="student_id"/>
          <field name="class_id"/>
        </tree>
      </field>
    </record>

    <record id="view_school_student_registration_form" model="ir.ui.view">
      <field name="name">school.student.registration.form</field>
      <field name="model">school.student.registration</field>
      <field name="arch" type="xml">
        <form string="Registration" version="7.0">
          <sheet>
            <h1> <label string="No"/> <field name="name" class="oe_inline"/> </h1>
            <group>
              <group>
                <field name="student_id"/>
                <field name="class_id"/>
              </group>
              <group>
                <field name="user_id"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_school_student_registration_filter" model="ir.ui.view">
      <field name="name">school.student.registration.filter</field>
      <field name="model">school.student.registration</field>
      <field name="arch" type="xml">
        <search string="Search Registrations">
          <field name="class_id"/>
          <field name="student_id"/>
          <group expand="0" string="Group By..." >
            <filter string="Class" domain="[]" context="{'group_by':'class_id'}"/>
          </group>
        </search>
      </field>
    </record>

    <record id="action_school_student_registration_form" model="ir.actions.act_window">
      <field name="name">Registrations</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">school.student.registration</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{}</field>
      <field name="search_view_id" ref="view_school_student_registration_filter"/>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to create a new registration.
        </p>
      </field>
    </record>

    <menuitem action="action_school_student_registration_form" id="menu_school_student_registration" parent="menu_school_academic" sequence="2" />

    <!-- Enrolment / Student -->
    <record id="view_school_student_registered_form" model="ir.ui.view">
      <field name="name">school.student.form..inherit</field>
      <field name="model">school.student</field>
      <field name="inherit_id" ref="school.view_school_student_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='user_id']" position="after">
          <field name="registered" />
        </xpath>
        <xpath expr="//page[@string='Relatives']" position="after">
          <page string="Registrations">
            <field name="registration_ids" context="{'default_student_id': active_id}">
              <tree string="Student Roll">
                <field name="year_id"/>
                <field name="name" />
                <field name="class_id"/>
              </tree>
            </field>
          </page>
        </xpath>

      </field>
    </record>

  </data>
</openerp>
